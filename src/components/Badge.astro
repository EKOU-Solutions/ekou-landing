---
import { Sparkles } from 'lucide-react'

interface Props {
  className?: string
  id?: string
}

const { className = '', id } = Astro.props
---

<span
  id={id}
  class:list={[
    'inline-flex items-center gap-2 text-sm uppercase text-(--color-primary)',
    className,
  ]}
>
  <Sparkles className="w-4 h-4" />
  <slot />
</span>
