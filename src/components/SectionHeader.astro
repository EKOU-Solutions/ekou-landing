---
export interface Props {
  id?: string;
  eyebrow?: string;
  title: string;
  description?: string;
  align?: 'left' | 'center';
}

const { id, eyebrow, title, description, align = 'left' } = Astro.props;
---
<div id={id} class={`section-header ${align === 'center' ? 'center' : ''}`}>
  {eyebrow && <p class="eyebrow">{eyebrow}</p>}
  <h2>{title}</h2>
  {description && <p class="lead">{description}</p>}
</div>
