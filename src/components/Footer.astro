---
import ekouLogo from '../assets/icons/ekouLogo-v1.svg'
import { Dribbble, Instagram, Linkedin, Twitch } from 'lucide-react'
import { getLangFromUrl, useTranslations } from '../i18n/utils/config'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
const footer = t('footer')
---

<footer id="footer" class="w-full">
  <div class="w-full border-t border-(--color-border)">
    <div class="mx-auto w-full max-w-7xl px-6 py-6 md:px-10">
      <div class="flex items-center justify-between gap-6">
        <div class="flex items-center gap-3">
          <img src={ekouLogo.src} alt="EKOU" class="h-9 w-auto cursor-pointer" />
          <div class="hidden md:block text-sm text-(--text-secundary)">{footer.copyright}</div>
        </div>

        <div class="flex items-center gap-3">
          <button type="button" aria-label="Instagram" class="footer-social">
            <Instagram className="h-5 w-5" />
          </button>
          <button type="button" aria-label="Twitch" class="footer-social">
            <Twitch className="h-5 w-5" />
          </button>
          <button type="button" aria-label="Dribbble" class="footer-social">
            <Dribbble className="h-5 w-5" />
          </button>
          <button type="button" aria-label="LinkedIn" class="footer-social">
            <Linkedin className="h-5 w-5" />
          </button>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer-social {
    width: 40px;
    height: 40px;
    border-radius: 9999px;
    border: 1px solid var(--color-border);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: var(--text-primary);
    cursor: pointer;
    transition:
      color 160ms ease,
      background-color 160ms ease,
      border-color 160ms ease,
      transform 160ms ease;
  }

  .footer-social:hover {
    color: #001018;
    background-color: var(--color-primary);
    border-color: var(--color-primary);
    transform: translateY(-1px);
  }

  .footer-social:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }
</style>
