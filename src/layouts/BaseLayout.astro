---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'EKOU | Evoluciona tu negocio con tecnología y acompañamiento',
  description = 'Consultoría, estrategia y productos tecnológicos diseñados para generar resultados medibles.',
} = Astro.props;
---
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link
      rel="preconnect"
      href="https://fonts.googleapis.com"
    />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Space+Grotesk:wght@600&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles/global.css" />
    <title>{title}</title>
  </head>
  <body>
    <div class="page-shell">
      <slot />
    </div>
  </body>
</html>
